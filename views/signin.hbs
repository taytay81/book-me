{{>navBar}}
<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Log in to find your next book</p>
  </header>
  {{#if msg}}
  <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}}
  <form method="post" action="/auth/signin" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" type="email" class="input-text input" name="email" placeholder="yo@gui.com" required
        value="yo@gui.com">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" type="password" class="input-text input" name="password" placeholder="••••••" required
        value="1234">
    </div>
    <button class="button-primary white">Log in !</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/auth/signup" class="button-link-form">Register</a></p>
</section>