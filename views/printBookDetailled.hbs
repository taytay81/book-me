{{>navBar}}
<div id="container-book-detailled">
  <ul class="all-books-list">
    <li class="books">
      <ul class="book-content">
        <li><img src="{{finalBook.image}}" alt="cover of book"></li>
        <li>Title: {{finalBook.title}}</li>
        <li>Author: {{finalBook.author}}</li>
        <li>Genre: {{finalBook.category}}</li>
        <li>State: {{finalBook.state}}</li>
        <li>Publisher: {{finalBook.publisher}}</li>
        <li>Price: {{finalBook.price}}</li>
        <li>Description: {{finalBook.description}}</li>
        <li>Published Date: {{finalBook.publishedDate}}</li>
        <li>Pages Number: {{finalBook.pageCount}}</li>
        <li>Language: {{finalBook.language}}</li>
        <li>State: {{finalBook.state}}</li>
        <li>Points: {{finalBook.points}}</li>
        <li>Likes: {{finalBook.likes}}</li>
        <a href="" class="like-link" custom-book-id={{finalBook._id}}><i class="fas fa-heart"></i></a>
        {{#if isLoggedIn}}
        <a href="/auth/buyBook/{{finalBook._id}}"><i class="fas fa-plus-square"></i></a>
        {{/if}}
      </ul>
    </li>
  </ul>
</div>